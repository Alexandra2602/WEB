@page "/{id:int?}"
@model WEB.Pages.Reservations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].CheckinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].CheckoutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].RoomsNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Room.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].ReservationCategories)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ReservationD.Reservations) {
    string selectedRow = " ";
    if(item.ID ==Model.ReservationID)
    {
        selectedRow = "table-succes";
    }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckoutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomsNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomType)
            </td>
            <td>
                @{ 
                    foreach (var category in item.ReservationCategories)
                {
                    @category.Category.ID @: @category.Category.CategoryName <br/>
                }
                }
               
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
